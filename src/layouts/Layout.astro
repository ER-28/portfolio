---
import Header from "../components/layout/Header.astro";
import Social from "../components/layout/Social.astro";
interface Props {
	title: string;
	currentPage: string;
}

const { title, currentPage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-4/5 mx-auto flex flex-col justify-center bg-gray-950 text-white">
		<Social />
		<Header currentPage={currentPage} />
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family:
			DejaVu Sans Mono,
			monospace;
	}

	@keyframes fade-in-up {
		0% {
			opacity: 0;
			transform: translateY(50px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fade-in-up-x {
		0% {
			opacity: 0;
			transform: translateX(50px);
		}
		100% {
			opacity: 1;
			transform: translateX(0);
		}
	}

	.animate-fade-in-up {
		animation: fade-in-up 0.6s ease-out forwards;
	}

	.animate-fade-in-up-x {
		animation: fade-in-up-x 0.6s ease-out forwards;
	}
</style>
